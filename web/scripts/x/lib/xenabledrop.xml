<x_symbol id='xEnableDrop'>

<sources>
  <src><file>xenabledrop.js</file><note><![CDATA[]]></note></src>
</sources>

<groups>
  <grp>Event</grp>
</groups>
<type>Function</type>

<description><![CDATA[Enable an element to receive a drop event from any element drag-enabled with xEnableDrag.]]></description>

<syntax>xEnableDrop(ele, fnDrop)</syntax>

<parameters>
  <par>
    <name>ele</name>
    <note><![CDATA[id string or element object reference]]></note>
  </par>
  <par>
    <name>fnDrop</name>
    <note><![CDATA[this function will be called when some drag-enabled element is dropped on this element.]]></note>
  </par>
</parameters>

<dependencies>
  <dep>xGetElementById</dep>
  <dep>xHasPoint</dep>
  <dep>xEnableDrag</dep>
</dependencies>

