<groups>
  <grp>UI</grp>
</groups>
<type>Object</type>

<description><![CDATA[xMenu1A Object Prototype. A variation on xMenu1. The menu slides down and up.]]></description>

<syntax>xMenu1A(triggerId, menuId, mouseMargin, slideTime, openEvent)</syntax>

<parameters>
  <par>
    <name>triggerId</name>
    <note><![CDATA[id string of trigger element]]></note>
  </par>
  <par>
    <name>menuId</name>
    <note><![CDATA[id string of menu]]></note>
  </par>
  <par>
    <name>mouseMargin</name>
    <note><![CDATA[integer margin around menu; when mouse is outside this margin the menu is hid.]]></note>
  </par>
  <par>
    <name>slideTime</name>
    <note><![CDATA[integer time for menu slide (in milliseconds)]]></note>
  </par>
  <par>
    <name>openEvent</name>
    <note><![CDATA[string name of event on which to open menu ('click', 'mouseover', etc)]]></note>
  </par>
</parameters>

<dependencies>
  <dep>xgetelementbyid</dep>
  <dep>xhide</dep>
  <dep>xaddeventlistener</dep>
  <dep>xmoveto</dep>
  <dep>xpagex</dep>
  <dep>xpagey</dep>
  <dep>xshow</dep>
  <dep>xslideto</dep>
  <dep>xheight</dep>
  <dep>xevent</dep>
  <dep>xhaspoint</dep>
  <dep>xremoveeventlistener</dep>
</dependencies>

